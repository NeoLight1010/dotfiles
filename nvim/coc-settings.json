{
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "json",
    "cmake",
    "javascript",
    "typescript",
    "typescriptreact",
    "css"
  ],
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "python": "pyright",
    "c/c++": "cpplint",
    "cmake": "cmake-lint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": "black",
    "cmake": "cmake-format"
  },
  "diagnostic-languageserver.formatters": {
    "cmake-format": {
      "command": "cmake-format",
      "args": ["%tempfile"],
      "doesWriteToFile": false
    }
  },
  "diagnostic-languageserver.linters": {
    "cmake-lint": {
      "command": "cmake-lint",
      "args": ["%file"]
    }
  },
  // "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd",
  "typescript.preferences.importModuleSpecifier": "relative",
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["graphql"]
    }
  },
  "html.enable": true,
  "html.filetypes": ["html", "handlebars", "htmldjango", "blade", "django"],
  "html.format.enable": false,
  "python.linting.mypyEnabled": true,
  "python.analysis.typeCheckingMode": "basic",

  "prettier.tabWidth": 4
}
